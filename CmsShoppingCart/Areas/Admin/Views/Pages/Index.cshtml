@model IEnumerable<CmsShoppingCart.Models.ViewModels.Pages.PageVM>

@{
    ViewBag.Title = "Pages";
}

<h2>Pages</h2>

<p>
    @Html.ActionLink("Add New Page", "AddPage")
</p>

@if (! Model.Any())
{
    <h2 class="text-center">There are no pages yet!</h2>
}
else
{ 
    <table class="table">
        <tr>
            <th>
               Title
            </th>
            <th>
                Slug
            </th>

            <th class="text-center">
                Sidebar
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.HasSidebar)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditPage", new { id = item.Id }) |
                @Html.ActionLink("Details", "PageDetails", new { id = item.Id }) |
                @if (item.Slug != "home")
                {
                    @Html.ActionLink("Delete", "DeletePage", new { id = item.Id }, new { @class = "delete" })
                }

            </td>
        </tr>
    }

    </table>
}

@section Scripts {
    
    <script>
        $(function () {
            $('a.delete').click(function () {
                if (!confirm("Confirm page deletion?")) {
                    return false;
                }
            })
        });
    </script>
    
}